            <ImageView
                android:id="@+id/imageViewEstado"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@android:color/black"
                android:layout_alignParentLeft="true" />
            <TextView
                android:id="@+id/textViewDia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@+id/imageViewEstado"
                android:layout_toRightOf="@+id/imageViewEstado"
                android:text="Lunes, 12/12/2016"
                android:textColor="@android:color/black"
                android:textSize="25dp"/>
            <TextView
                android:id="@+id/textViewEstadoCielo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado del cielo"
                android:layout_alignLeft="@+id/textViewDia"
                android:layout_below="@+id/textViewDia"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                />

            <ImageView
                android:id="@+id/imageViewTemperatura"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="40dp"
                android:layout_alignTop="@+id/horizontalScroll"
                android:layout_alignLeft="@+id/imageViewEstado"
                android:background="@android:color/white"
                android:src="@drawable/ic_thermometer"/>
            <ImageView
                android:id="@+id/imageViewPrecipitaciones"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/imageViewTemperatura"
                android:layout_alignLeft="@+id/imageViewEstado"
                android:background="@android:color/white"
                android:src="@drawable/ic_rain"
                />
            <ImageView
                android:id="@+id/imageViewViento"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/imageViewPrecipitaciones"
                android:layout_alignLeft="@+id/imageViewEstado"
                android:background="@android:color/white"
                android:src="@drawable/ic_windy"/>

