<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgVwEstadoInfo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@android:color/black"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/txVwNombreMunicInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Municipio, hoy"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@+id/imgVwEstadoInfo"
                android:maxWidth="180dp"
                android:textSize="25dp"
                android:textColor="@android:color/black"
                android:textAlignment="textEnd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="estado"
                android:textSize="25dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/txVwNombreMunicInfo"
                android:layout_toLeftOf="@+id/imgVwEstadoInfo"
                android:layout_toStartOf="@+id/imgVwEstadoInfo"
                android:textAlignment="textEnd"
                android:id="@+id/txVwEstadoInfo" />

            <ImageView
                android:id="@+id/imgVwTempInfo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_thermometer"
                android:layout_below="@+id/imgVwEstadoInfo"
                android:layout_margin="15dp"/>
            <TextView
                android:id="@+id/txVwTempInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgVwTempInfo"
                android:layout_alignBottom="@+id/imgVwTempInfo"
                android:layout_toRightOf="@+id/imgVwTempInfo"
                android:layout_below="@+id/imgVwEstadoInfo"
                android:gravity="center"
                android:textSize="18dp"
                android:text="0ยบ - 0ยบ"/>
            <ImageView
                android:id="@+id/imgVwVientoInfo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_windy"
                android:layout_alignTop="@+id/imgVwTempInfo"
                android:layout_toRightOf="@+id/imgVwTempInfo"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="15dp"
                />
            <TextView
                android:id="@+id/txVwVientoInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgVwVientoInfo"
                android:layout_alignBottom="@+id/imgVwVientoInfo"
                android:layout_toRightOf="@+id/imgVwVientoInfo"
                android:gravity="center"
                android:textSize="18dp"
                android:text="0m/s"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>